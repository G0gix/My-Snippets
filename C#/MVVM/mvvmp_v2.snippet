<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>MVVM_Prop_v2</Title>
			<Shortcut>mvvmprop</Shortcut>
			<Description>Фрагмент кода для свойства MVVM</Description>
			<Author>Microsoft Corporation</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
				<SnippetType>SurroundsWith</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>region</ID>
					<ToolTip>Выражение для вычисления</ToolTip>
					<Default>MyProp</Default>
				</Literal>
				<Literal>
					<ID>type</ID>
					<ToolTip>Var type</ToolTip>
					<Default>int</Default>
				</Literal>
				<Literal>
					<ID>privateVar</ID>
					<ToolTip>privateVar name</ToolTip>
					<Default>_myProp</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp">
		<![CDATA[
				#region $type$ - $region$ $end$
				/// <summary>
				/// $end$
				/// </summary>
				private $type$ $privateVar$; 

				/// <summary>
				/// $end$
				/// </summary>
				public $type$ $region$
				{
				    get { return $privateVar$; }
				    set => Set(ref $privateVar$, value); 
				}
				#endregion
			]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
